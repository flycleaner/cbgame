<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chubao.cf.game.repository.mapper.IArticleDao">
    <select id="getArticle" resultType="com.chubao.cf.game.domain.Article">
        SELECT * FROM cb_article WHERE articleId=#{articleId} AND isDelete = 0
    </select>

    <update id="editArticle" parameterType="com.chubao.cf.game.domain.Article">
        UPDATE cb_article
        SET
        userId=#{userId},
        title=#{title},
        content=#{content},
        post=#{post},
        top=#{top}
        WHERE
        articleId=#{articleId}
    </update>

    <insert id="addArticle" parameterType="com.chubao.cf.game.domain.Article" useGeneratedKeys="true" keyProperty="articleId">
        INSERT INTO cb_article
        (userId,title,content,post,top,timeAdded)
        VALUES
        (#{userid},#{title},#{content},#{post},#{top},#{timeAdded})
    </insert>

    <update id="deleteArtile">
        UPDATE cb_article
        SET
        isDelete=1
        WHERE articleId=#{articleId}
    </update>
</mapper>